{
  "variable": {
    "region": {
      "description": "AWS region",
      "type": "string",
      "default": "us-west-2"
    },
    "app_name": {
      "description": "Application name",
      "type": "string",
      "default": "myapp"
    },
    "env_var_test": {
      "description": "Test configorama env var",
      "type": "string",
      "default": "$[env:TF_JSON_TEST_VAR]"
    },
    "with_fallback": {
      "description": "Test configorama fallback",
      "type": "string",
      "default": "$[env:MISSING_VAR, 'fallback-value']"
    }
  },
  "locals": {
    "full_name": "${var.app_name}-app",
    "terraform_syntax": "${var.region}"
  }
}
