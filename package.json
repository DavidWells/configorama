    "dot-prop": "^5.3.0",
    "find-up": "^3.0.0",
    "git-url-parse": "^14.0.0",
    "js-yaml": "^3.14.1",
    "json5": "^2.2.3",
    "lodash.isarray": "^4.0.0",
    "lodash.isstring": "^4.0.1",
    "lodash.isnumber": "^3.0.3",
    "lodash.isobject": "^3.0.2",
    "lodash.isdate": "^4.0.1",
    "lodash.isregexp": "^4.0.1",
    "lodash.isfunction": "^3.0.9",
